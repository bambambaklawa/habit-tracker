generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  username String
  habits Habit[]
}

model Habit{
  id Int @id @default(autoincrement())
  habitName String
  habitIcon String
  startDay DateTime @default(now())
  currentProgress Int
  habitNote String
  userId Int
  user User @relation(fields: [userId], references: [id])
}

